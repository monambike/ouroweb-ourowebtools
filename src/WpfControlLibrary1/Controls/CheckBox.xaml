<UserControl x:Class="Common.UserControls.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commonControls="clr-namespace:Common.UserControls;assembly="
             mc:Ignorable="d">
    <DockPanel MouseDown="DockPanel_MouseDown">
        <CheckBox x:Name="cmbCheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <commonControls:LeftLabel x:Name="txtLabel"/>
    </DockPanel>
</UserControl>
