<UserControl x:Class="Common.UserControls.SuggestionTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commonControls="clr-namespace:Common.UserControls;assembly="
             mc:Ignorable="d"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <commonControls:LeftLabel x:Name="lblLabel" Grid.Row="0"/>
        <TextBox x:Name="txtSuggestionTextBox" Grid.Row="1" HorizontalAlignment="Left" Padding="5" Width="225"/>
    </Grid>
</UserControl>
